# Start of the makefile
# Defining variables
objects = nrtype.o nrutil.o indexx.o init_random_seed.o \
          kptwo.o sort2.o detrital_mc_full_ls_PDF.o
f90comp = gfortran
#switch = -C -w
switch = -O3
# Makefile
dmc: $(objects)
	$(f90comp) -o det_mc_full_ls $(switch) $(objects)
nrtype.o: nrtype.f90
	$(f90comp) -c $(switch) nrtype.f90
nrutil.o: nrutil.f90
	$(f90comp) -c $(switch) nrutil.f90
indexx.o: indexx.f90
	$(f90comp) -c $(switch) indexx.f90
init_random_seed.o: init_random_seed.f90
	$(f90comp) -c $(switch) init_random_seed.f90
kptwo.o: kptwo.f90
	$(f90comp) -c $(switch) kptwo.f90
sort2.o: sort2.f90
	$(f90comp) -c $(switch) sort2.f90
detrital_mc_full_ls_PDF.o: detrital_mc_full_ls_PDF.f90
	$(f90comp) -c $(switch) detrital_mc_full_ls_PDF.f90
# Cleaning everything
clean:
	rm $(objects)
# End of the makefile
